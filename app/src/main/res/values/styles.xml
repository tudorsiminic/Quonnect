<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

    </style>

    <style name="spinnerStyle"  parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:padding">5sp</item>
    </style>

    <style name="WindowTitleBackground">
        <item name="android:background">@color/titlebackgroundcolor</item>
        <item name="android:foreground">@color/titlebackgroundcolor</item>
    </style>

    <style name="Theme.TheFinalTheme" parent="android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/Theme.TheFinalTheme.MyActionBar</item>

    </style>

    <style name="Theme.TheFinalTheme.MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/press</item>
        <item name="android:textAppearance">@style/Theme.TheFinalTheme.MyActionBar.MyTextType</item>
    </style>

    <style name="Theme.TheFinalTheme.MyActionBar.MyTextType" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomActionBarTheme"  parent="@android:style/Theme.Holo.Light">
    <item name="android:actionBarStyle">@style/MyActionBar</item>
</style>

    <!-- ActionBar styles -->
<style name="MyActionBar"
    parent="@android:style/Widget.Holo.ActionBar">
    <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    <item name="android:background">@drawable/press</item>
</style>

    <!-- ActionBar title text -->
<style name="MyActionBarTitleText"
parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
<item name="android:textColor">@color/white</item>
</style>

    </resources>
